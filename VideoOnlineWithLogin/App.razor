<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            @using VideoOnlineWithLogin.Server.Shared
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1>
                        This page isn't accessible until you login
                    </h1>
                    <p1>
                        <NavLink class="list-group-item list-group-item-action bg-light" href="LoginDisplay">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Log in
                        </NavLink>
                    </p1>

                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

